<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--引入MD后，会默认给所有的Button加上悬浮效果-->
    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="水波纹 常规"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="水波纹 自定义动画"
            android:background="@drawable/ripple_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="波纹有边界--?attr"
            android:background="?attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="波纹有边界--?android:attr"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="波纹超出边界--?attr"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="波纹超出边界--?android:attr"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <Button
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="无波纹"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <TextView
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="TextView"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    <!-- android:clickable="true"-->
    <TextView
            android:clickable="true"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:text="TextView文本设置波纹效果"
            android:background="@drawable/ripple_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


</LinearLayout>